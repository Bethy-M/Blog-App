<!DOCTYPE html>
<html>
<head>
  <title>My Posts</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>My Blog</h1>
    <a href="/new" id="bethy" class="btn">Create New Post</a>
  </header>

  <main>
    <% if (posts.length === 0) { %>
      <p>No posts yet. Create one!</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <article>
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/posts/<%= post.id %>/edit" class="btn">Edit</a>
          <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn delete">Delete</button>
          </form>
        </article>
      <% }) %>
    <% } %>
  </main>
</body>
</html>
